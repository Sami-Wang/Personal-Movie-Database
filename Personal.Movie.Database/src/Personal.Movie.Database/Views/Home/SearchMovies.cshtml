@model List<Personal.Movie.Database.Model.MovieModel.MovieBriefInfo>

@{
    ViewData["Title"] = "Search Result";
}

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1>
                Movies
                @if (Model == null)
                {
                    <small class="pull-right">0 Movie</small>
                }
                else
                {
                    if (Model.Count == 0 || Model.Count == 1)
                    {
                        <small class="pull-right">@Model.Count Movie</small>
                    }
                    else
                    {
                        <small class="pull-right">@Model.Count Movies</small>
                    }
                }
            </h1>
        </div>
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="row">
                <div class="col-md-2">
                    @if (@Model[i].posterPath != null)
                    {
                        <a asp-controller="Home" asp-action="MovieDetailsInfo" asp-route-id=@Model[i].id>
                            <img src=@Model[i].posterPath alt=@Model[i].title class="img-responsive">
                        </a>
                    }                   
                </div>
                               
                <div class="col-md-1">
                </div>

                <div class="col-md-9">
                    <a asp-controller="Home" asp-action="MovieDetailsInfo" asp-route-id=@Model[i].id>
                        @if (Model[i].releaseDate == null)
                        {
                            <h3>@Model[i].title</h3>
                        }
                        else
                        {
                            <h3>@Model[i].title (@DateTime.Parse(Model[i].releaseDate.ToString()).Year)</h3>
                        }                        
                    </a>
                    @if (Model[i].originalTitle != null)
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <p style="font-weight:bold;">Original Title:</p>
                            </div>
                            <div class="col-md-6">
                                <p>@Model[i].originalTitle</p>
                            </div>
                        </div>
                    }

                    @if (Model[i].releaseDate != null) {
                        <div class="row">
                            <div class="col-md-3">
                                <p style="font-weight:bold;">Release Date:</p>
                            </div>
                            <div class="col-md-6">
                                <p>@DateTime.Parse(Model[i].releaseDate.ToString()).Year-@DateTime.Parse(Model[i].releaseDate.ToString()).Month-@DateTime.Parse(Model[i].releaseDate.ToString()).Day</p>
                            </div>
                        </div>
                    }

                    @if (Model[i].originalLanguage != null)
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <p style="font-weight:bold;">Original Language:</p>
                            </div>
                            <div class="col-md-6">
                                <p>@Model[i].originalLanguage</p>
                            </div>
                        </div>
                    }

                    @if (Model[i].overview != null)
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <p style="font-weight:bold;">Overview:</p>
                            </div>
                            <div class="col-md-6">
                                <p>@Model[i].overview</p>
                            </div>
                        </div>
                    }           
                </div>
            </div>
            <hr />
        }       
    </div>
</div>
