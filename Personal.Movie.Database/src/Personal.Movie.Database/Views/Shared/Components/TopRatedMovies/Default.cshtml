@model List<Personal.Movie.Database.Model.MovieModel.MovieBriefInfo>

<div style="height: 4vh;">
    <h2>
        Top Rated Movies
    </h2>
</div>

<div id="topRatedMoviesCarousel" class="carousel slide" data-ride="carousel" style="height: 81vh">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#topRatedMoviesCarousel" data-slide-to="0" class="active"></li>
        @for (int i = 1; i < Model.Count; i++)
        {
            <li data-target="#topRatedMoviesCarousel" data-slide-to=@i.ToString()></li>
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox" style="height: 81vh">
        <div class="item active" style="height: 81vh;">
            <img src=@Model[0].posterPath alt=@Model[0].title style="height: 78vh; margin:auto;">
            <div style="height: 3vh;">
                <h5 style="font-weight: bold;">@Model[0].title (@DateTime.Parse(Model[0].releaseDate.ToString()).Year)</h5>
            </div>
        </div>
        @for (int i = 1; i < Model.Count; i++)
        {
            <div class="item" style="height: 81vh">
                <img src=@Model[i].posterPath alt=@Model[i].title style="height: 78vh; margin:auto;">
                <div style="height: 3vh">
                    <h5 style="font-weight: bold;">@Model[i].title (@DateTime.Parse(Model[i].releaseDate.ToString()).Year)</h5>
                </div>
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#topRatedMoviesCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#topRatedMoviesCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>